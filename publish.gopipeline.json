{
    "name": "convious-analytics-publish",
    "group": "pricer",
    "enable_pipeline_locking": true,
    "environment_variables": [],
    "materials": [
        {
            "url": "git@github.com:Convious/pricing_analytics.git",
            "type": "git",
            "name": "source",
            "filter": {
            }
        }
    ],
    "stages": [
        {
            "approval": {
                "type": "manual",
                "users": [],
                "roles": []
            },
            "name": "publish",
            "jobs": [
                {
                    "name": "publish",
                    "tasks": [
                        {
                            "type": "exec",
                            "command": "/bin/bash",
                            "arguments": [ "-c", "{ echo \"$NPM_USER\"; sleep 1; echo \"$NPM_EMAIL\"; } | yarn login" ]
                        },
                        {
                            "type": "exec",
                            "command": "/bin/bash",
                            "arguments": [ "-c", "{ echo \"$NPM_PASSWORD\"; } | yarn publish --access public --new-version $(cat package.json | jq -r \".version\")" ]
                        }
                    ],
                    "artifacts": []
                }
            ]
        }
    ]
}
